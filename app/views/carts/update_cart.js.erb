// Assuming you update the cart's HTML here
document.getElementById("<%= dom_id(@cart) %>").innerHTML = '<%= j(render "carts/cart", cart: @cart) %>';

// Reattach the event listener
attachCartIconListener();

function attachCartIconListener() {
  document.getElementById('banner-icons').addEventListener('click', function(event) {
    if (document.getElementById('cart-icon').contains(event.target)) {
      var cartDropdown = document.getElementById('cart-dropdown');
      cartDropdown.style.display = cartDropdown.style.display === 'block' ? 'none' : 'block';
    }
  });
}
