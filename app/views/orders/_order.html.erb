<div id="<%= dom_id(order) %>" class="order">
    <h2>Order ID: <%= order.id %></h2>

    <table>
      <tr>
        <th>User</th>
        <td><%= order.user&.userid || "Unknown User" %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= order.name %></td>
      </tr>
      <tr>
        <th>Address</th>
        <td><%= order.address %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= order.email %></td>
      </tr>
      <tr>
        <th>Paytype</th>
        <td><%= order.paytype %></td>
      </tr>
    </table>

    <p>
      <%= link_to "Show this order", order_path(order) %>
    </p>
  </div>